FROM golang AS builder
WORKDIR /frp
COPY go.mod .
COPY go.sum .
RUN go mod download
COPY . .
RUN make frpc_linux_arm64

FROM arm64v8/alpine
WORKDIR /
COPY --from=builder /frp/bin/frpc_linux_arm64 /usr/local/bin/frpc
COPY --from=builder /frp/conf/frpc.ini /etc/frpc.ini
CMD ["frpc", "--config", "/etc/frpc.ini"]
